<Window x:Class="Game.DarkAlliance.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Game.DarkAlliance.UI.WPF"
        xmlns:scrollFree="clr-namespace:Craft.UIElements.Geometry2D.ScrollFree;assembly=Craft.UIElements"
        mc:Ignorable="d"
        Title="Dark Alliance" Height="450" Width="800"
        DataContext="{Binding Path=MainWindowViewModel, Source={StaticResource BootStrapper}}"
        Loaded="MainWindow_OnLoaded"
        Closing="MainWindow_OnClosing"
        KeyDown="MainWindow_OnKeyDown"
        KeyUp="MainWindow_OnKeyUp">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <scrollFree:GeometryEditorView Grid.Row="0" Grid.Column="0" DataContext="{Binding GeometryEditorViewModel}"/>

        <Viewport3D Grid.Row="0" Grid.Column="1" Name="viewport">

            <Viewport3D.Camera>
                <PerspectiveCamera
                    Position="{Binding CameraPosition}"
                    LookDirection="{Binding LookDirection}"
                    UpDirection="0,1,0"
                    FieldOfView="45"/>
            </Viewport3D.Camera>

            <!-- Dim ambient so the point light matters -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <AmbientLight Color="#202020"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!--Directional light, to show floor-->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <DirectionalLight Color="#666666"
                                      Direction="{Binding DirectionalLight1}"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- Player light (Point light) -->
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <PointLight Color="white"
                                Range="10"
                                ConstantAttenuation="1"
                                LinearAttenuation="0.2"
                                QuadraticAttenuation="0.05"
                                Position="{Binding PlayerLightPosition}"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>

            <!-- Stationary light (Point light) -->
            <!--<ModelVisual3D>
                <ModelVisual3D.Content>
                    <PointLight Color="white"
                                Range="10"
                                ConstantAttenuation="1"
                                LinearAttenuation="0.2"
                                QuadraticAttenuation="0.05"
                                Position="0,0,-2"/>
                </ModelVisual3D.Content>
            </ModelVisual3D>-->

            <ModelVisual3D Content="{Binding Scene3D}"/>

        </Viewport3D>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <TextBlock Text="{Binding LightPosition.X}"/>
            <TextBlock Text="{Binding LightPosition.Y}"/>
            <TextBlock Text="{Binding LightPosition.Z}"/>
        </StackPanel>
    </Grid>
</Window>
